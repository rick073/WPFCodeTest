<UserControl x:Class="Richard_Wu_WPF_Code_Test.TaskInListControl"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:local="clr-namespace:Richard_Wu_WPF_Code_Test"
			 mc:Ignorable="d"
			 d:DesignHeight="70" d:DesignWidth="800">
    <Grid x:Name="grid">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="3*"/>
			<ColumnDefinition Width="2.5*"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<Label x:Name="nameLabel" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
		<Label x:Name="dateLabel" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"/>

		<Button x:Name="editButton" Grid.Column="2" Grid.Row="0" Width="30" Height="25" HorizontalAlignment="Center" Margin="10,0,10,0">Edit</Button>
		<Button x:Name="doneButton" Grid.Column="3" Grid.Row="0" Width="40" Height="25" HorizontalAlignment="Center" Margin="10,0,10,0">Done</Button>
		<Button x:Name="deleteButton" Grid.Column="4" Grid.Row="0" Width="50" Height="25" HorizontalAlignment="Center" Margin="10,0,10,0">Delete</Button>

	</Grid>
</UserControl>
